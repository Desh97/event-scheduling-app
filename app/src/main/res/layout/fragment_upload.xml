<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/postbg">



    <ScrollView
        android:layout_width="410dp"
        android:layout_height="555dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/edit" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="70dp"
                android:layout_height="15dp"
               android:layout_marginLeft="85dp"
                android:background="@drawable/event_namen_t"
                />

            <EditText
                android:id="@+id/event_name"
                android:layout_width="275dp"
                android:layout_height="25dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5sp"
                android:background="@drawable/event_name"
                android:gravity="center_vertical"
                android:hint="  Event Name"
                android:inputType="textPersonName"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.61"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.213" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:background="@drawable/event_desicription_t"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="85dp"/>

            <EditText
                android:id="@+id/description"
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/event_description"
                android:ems="10"
                android:gravity="start|top"
                android:hint="  Description"
                android:inputType="textMultiLine"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.61"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.301" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:layout_height="15dp"
               android:layout_marginTop="5dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/add_your_post_t"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5sp"
                android:background="@drawable/event_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.302"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.464" />

            <Button
        android:id="@+id/choose_image"
        android:layout_width="60dp"
        android:layout_height="30dp"
                android:layout_marginLeft="85dp"
        android:text="choose"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.718"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/list" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:background="@drawable/category"
                android:layout_marginLeft="85dp"
               />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="275dp"
                android:layout_height="19dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.61"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.591" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/set_the_date"/>

            <EditText
                android:id="@+id/date"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/event_name"
                android:ems="10"
                android:inputType="date"
                android:textSize="10dp"
                android:layout_marginLeft="85dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.359"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                app:layout_constraintVertical_bias="0.077" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:background="@drawable/set_the_time"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5sp"/>

            <EditText
                android:id="@+id/time"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/event_name"
                android:ems="10"
                android:inputType="time"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.359"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date"
                app:layout_constraintVertical_bias="0.052" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:background="@drawable/set_the_venue"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/venue"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/event_name"
                android:ems="10"
                android:hint="  Set your a Location"
                android:inputType="textMultiLine"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.359"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date"
                app:layout_constraintVertical_bias="0.237" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ticket" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:background="@drawable/entrance"
                android:layout_marginLeft="85dp"/>

            <EditText
                android:id="@+id/entrance"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/event_name"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Free/Paid"
                android:inputType="textMultiLine"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.393"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/venue"
                app:layout_constraintVertical_bias="0.094" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/person" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/organizer_name" />

            <EditText
                android:id="@+id/organizer"
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/event_description"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Enter your name"
                android:inputType="textMultiLine"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.887" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:background="@drawable/contact_info"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="85dp"/>

            <EditText
                android:id="@+id/contact"
                android:layout_width="275dp"
                android:layout_height="25dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/event_name"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Contact info (email or mobile number)"
                android:inputType="textMultiLine"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.61"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.936" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="388dp"
                android:layout_height="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.148" />

            <Button
        android:id="@+id/upload_button"
        android:layout_width="59dp"
        android:layout_height="18dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="180dp"
        android:background="@drawable/upaload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966" />

            <TextView
        android:id="@+id/show_upload"
        android:layout_width="50dp"
        android:layout_height="11dp"
        android:layout_marginTop="5dp"
                android:layout_marginLeft="185dp"
        android:background="@drawable/show_uploads"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>